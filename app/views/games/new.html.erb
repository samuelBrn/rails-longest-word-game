
<h1>New Game</h1>
<p>Here are your letters:</p>
<ul>
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<%form url: '/score', method: :post do%>
  <% hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%label_tag :word, "Your word:" %>
  <% text_field_tag :word %>

  <% @letters.each do |letter| %>
    <% hidden_field_tag 'letters[]', letter %>
  <% end %>

  <%= submit_tag "Submit" %>
<% end %>
